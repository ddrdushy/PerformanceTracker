extends layout

block content
    div#loading-image(style='position: absolute; top: 0px; left: 0px; width: 100%; height: 100%;')
        .loader
            .stick1
            .stick2
            .stick3
            .stick4

    .container
        .row
          .col-lg-offset-3.col-lg-6
            .form-group
              label(for='year') Select Year:
              select#year.form-control
          .col-lg-offset-3.col-lg-6
            .form-group
              label(for='month') Select Month:
              select#month.form-control
          .form-group
            button#load.btn.btn-primary.col-lg-offset-4.col-lg-4 Load Activity
        hr
        .row
          .col-lg-12(id="data")

    script(src='/javascripts/client.js',type="text/javascript")